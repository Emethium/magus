<% provide(:title, 'Send SMS') %>
<h1>Send your SMS here</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@message) do |m| %>
      <%= m.label :number %>
      <%= m.text_field :number, class: 'form-control' %>

      <%= m.label :msg %>
      <%= m.email_field :msg, class: 'form-control' %>

      <%= m.submit "Send my SMS!", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
