<% provide(:title, 'Novo cadastro') %>
<h1>Cadastro de novo doador</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@donator) do |d| %>
      <%= d.label :nome %>
      <%= d.text_field :name %>

      <div class="form-inline">
        <%= d.label :sexo %><br>
        <div class="radio-inline">
          <%= radio_button_tag(:sex, "masculino") %><br>
          <%= label_tag(:sex_male, "Masculino") %>
        </div>
        <div class="radio-inline">
          <%= radio_button_tag(:sex, "feminino") %><br>
          <%= label_tag(:sex_female, "Feminino") %>
        </div>
      </div>

      <%= d.label :idade %>
      <%= d.number_field :age %>

      <%= d.label :endereço %>
      <%= d.text_field :address %>

      <%= d.label :telefone %>
      <%= d.text_field :phone %>

      <div class="form-inline">
        <%= d.label :tipo_sanguíneo %><br>
        <div class="radio-inline">
          <%= radio_button_tag(:bloodType, "O") %><br>
          <%= label_tag(:type_O, "O") %>
        </div>
        <div class="radio-inline">
          <%= radio_button_tag(:bloodType, "A") %><br>
          <%= label_tag(:type_A, "A") %>
        </div>
        <div class="radio-inline">
          <%= radio_button_tag(:bloodType, "B") %><br>
          <%= label_tag(:type_B, "B") %>
        </div>
        <div class="radio-inline">
          <%= radio_button_tag(:bloodType, "AB") %><br>
          <%= label_tag(:type_AB, "AB") %>
        </div>
      </div>

      <div class="form-inline">
        <%= d.label :fator_rh %><br>
        <div class="radio-inline">
          <%= radio_button_tag(:rhFactor, "+") %><br>
          <%= label_tag(:rh_positive, "+") %>
        </div>
        <div class="radio-inline">
          <%= radio_button_tag(:rhFactor, "-") %><br>
          <%= label_tag(:rh_negative, "-") %>
        </div>
      </div>

      <%= d.submit "Cadastrar novo doador!", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
