<% provide(:title, 'Novo cadastro') %>
<h1>Cadastro de novo doador</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@donator) do |d| %>
      <%= d.label :nome %>
      <%= d.text_field :name %>

      <div class="form-inline">
        <%= d.label :sexo %><br>
        <div class="radio-inline">
          <%= d.radio_button :sex, "Masculino" %><br>
          <%= d.label :sex, "Masculino", :value => "Masculino"  %>
        </div>
        <div class="radio-inline">
          <%= d.radio_button :sex, "Feminino" %><br>
          <%= d.label :sex, "Feminino", :value => "Feminino"  %>
        </div>
      </div>

      <%= d.label :idade %>
      <%= d.number_field :age %>

      <%= d.label :endereço %>
      <%= d.text_field :address %>

      <%= d.label :cidade %>
      <%= d.text_field :city %>

      <%= d.label :telefone %>
      <%= d.text_field :phone %>

      <div class="form-inline">
        <%= d.label :tipo_sanguíneo %><br>
        <div class="radio-inline">
          <%= d.radio_button :bloodType, "0" %><br>
          <%= d.label :bloodType, "O", :value => "O"  %>
        </div>
        <div class="radio-inline">
          <%= d.radio_button :bloodType, "A" %><br>
          <%= d.label :bloodType, "A", :value => "A"  %>
        </div>
        <div class="radio-inline">
          <%= d.radio_button :bloodType, "B" %><br>
          <%= d.label :bloodType, "B", :value => "B"  %>
        </div>
        <div class="radio-inline">
          <%= d.radio_button :bloodType, "AB" %><br>
          <%= d.label :bloodType, "AB", :value => "AB"  %>
        </div>
      </div>

      <div class="form-inline">
        <%= d.label :fator_rh %><br>
        <div class="radio-inline">
          <%= d.radio_button :rhFactor, "+" %><br>
          <%= d.label :rhFactor, "+", :value => "+"  %>
        </div>
        <div class="radio-inline">
          <%= d.radio_button :rhFactor, "-" %><br>
          <%= d.label :rhFactor, "-", :value => "-"  %>
        </div>
      </div>

      <%= d.label :data_da_última_doação %>
      <%= d.date_field :lastDonation %>

      <%= d.submit "Cadastrar novo doador!", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
