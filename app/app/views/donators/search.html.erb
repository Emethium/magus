<% provide(:title, 'Consulta') %>
<h1>Consulta de doadores</h1>

<div id="forms">
    <%= form_tag donators_path, :method=> "get" do %>

      <%= label_tag :name, "Nome" %>
      <%= text_field_tag :name %>


      <%= label_tag :sex, "Sexo" %>
      <%= select_tag :sex, options_for_select([['',''], ['Masculino', 'Masculino'], ['Feminino', 'Feminino']]) %>

      <%= label_tag :bloodType, "Tipo Sanguíneo" %>
      <%= select_tag :bloodType, options_for_select([['',''], ['A', 'A'], ['B', 'B'], ['AB', 'AB'], ['O', 'O']]) %>

      <%= label_tag :rhFactor, "Fator rh" %>
      <%= select_tag :rhFactor, options_for_select([['',''], ['+', '+'], ['-', '-']]) %>

      <%= label_tag :city, "Cidade" %>
      <%= text_field_tag :city%>

      <%= label_tag :apt, "Apto para doação" %>
      <%= select_tag :apt, options_for_select([['',''], ['Sim', 'Sim'], ['Não', 'Não']]) %>

      <br><br><br>
      <%= submit_tag "Search" %>
      <%= link_to "Apagar campos de busca", request.path, class:"cancel-button" %>
    <% end %>

</div>
