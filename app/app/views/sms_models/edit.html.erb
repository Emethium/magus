<% provide(:title, "Editar modelo de mensagem") %>
<h1>Editar modelo de mensagem SMS</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@sms_model) do |s| %>

      <%= s.label :nome %>
      <%= s.text_field :name, class: 'form-control' %>

      <%= s.label :mensagem %>
      <%= s.text_area :content, class: 'form-control'%>

      <%= s.submit "Salvar alterações!", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
